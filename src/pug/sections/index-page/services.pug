include ../../mixins/section-header
include ../../components/info-card
include ../../content/services-list

section.services
  .container.services__container
    +section-header({title: "Наши услуги", text: "Центр легализации документов — это ваш надежный партнер в подтверждении юридической силы официальных документов за рубежом."})

    - var listClass = (serviceList.length === 2) ? "base-section-list--2cols" : "base-section-list--3cols"

    .base-section-list(class=listClass)
      each item in serviceList
        +info-card(item)
